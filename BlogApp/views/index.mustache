<!doctype html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Blog App August 23rd</title>
        <link rel="stylesheet" href="styles.css">
    </head>


    <body>

        <h1>Blog App</h1>
        <p>
        <form method="POST" action="/addpost">
            <h3>Title</h3>
            <input type="text" id="blogTitle" placeholder="Enter the Title of Your Blog">
            <h3>Body</h3>
            <br>
            <input type="text" id="blogBody" placeholder="Enter Body">
            <button type="submit" class="btn btn-primary" id="addPost">Submit</button>
        </form>



        <ul id="postsUL">
            {{#posts}}
                <li>
                    <form method="POST" action="delete-post">
                    {{title}}
                    {{body}}
                    <button>DELETE</button>
                    </form>
                </li>
            {{/posts}}
        </ul>



    </body>
</html>
